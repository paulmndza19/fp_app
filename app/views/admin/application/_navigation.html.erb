        resources = resources.reject{|route| ['sales_reports'].include? route}
        admin_resources = resources.reject do |route|
          ['sales_categories', 'daily_sales', 'tenants', 'late_tenants', 'stalls', 'stall_rentals', 'rental_payments', 'expense_categories', 'daily_expenses'].include? route
        end
        rental_resources = resources.select do |route|
          ['tenants', 'late_tenants', 'stalls', 'stall_rentals', 'rental_payments'].include? route
        end

        expense_resources = resources.select do |route|
          ['expense_categories', 'daily_expenses'].include? route
