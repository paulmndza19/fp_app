  <!-- SIDEBAR HEADER -->
  <div class="flex items-center gap-2 px-6 py-5.5 lg:py-6.5">
    <a href="/admin">
      <%= image_tag "icon.png", class: "h-16" %>
    </a>

    <a href="/admin">
      <h2 class="text-white ml-6"> FPAccess - LSPU </h2>
    </a>

    <button
      class="block lg:hidden"
      @click.stop="sidebarToggle = !sidebarToggle"
    >
      <svg
        class="fill-current"
        width="20"
        height="18"
        viewBox="0 0 20 18"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
