<div class="flex justify-left align-center mt-12">
  <% if @current_user.is_admin? %>
    <div class="flex max-w-sm rounded overflow-hidden shadow-lg bg-white mx-6">
      <div class="px-6 py-4">
        <div class=" mb-2 text-gray-500">Total Contributions</div>
        <p class="text-gray-700 text-base font-bold text-xl">
          <%= number_to_currency(@total_contributions, unit: "₱") %>
        </p>
      </div>
      <div class="py-4 px-6">
        <div class="bg-green-700 rounded-lg">
          <div class="text-2xl text-white">₱</div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="max-w-sm rounded overflow-hidden shadow-lg bg-white mx-6">
    <div class="px-6 py-4">
      <div class=" mb-2 text-gray-500">Your Total Contributions</div>
      <p class="text-gray-700 text-base font-bold text-xl">
        <%= number_to_currency(@your_total_contributions, unit: "₱") %>
      </p>
    </div>
  </div>
</div>