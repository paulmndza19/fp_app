<div id="<%= dom_id claim_request_type %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= claim_request_type.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this claim request type", claim_request_type, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this claim request type", edit_claim_request_type_path(claim_request_type), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
